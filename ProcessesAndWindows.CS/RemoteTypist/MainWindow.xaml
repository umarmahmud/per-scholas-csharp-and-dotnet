<Window x:Class="RemoteTypist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteTypist"
        mc:Ignorable="d"
				WindowStartupLocation="Manual"
				Top="0" Left="0"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Button Content="Find Notepad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Click="Button_Click" Margin="5"/>
        <Label Name="Status" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="240" Margin="100,5,0,0" />
        <Label Content="Type into the textbox to send keystrokes to Notepad" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="473" />
        <TextBox Name="tb" HorizontalAlignment="Left" Height="209" TextWrapping="Wrap" VerticalAlignment="Top" Width="632" Margin="10,76,0,0" TextChanged="TextBox_TextChanged"/>
        <Label Name="MessagesSent" Content="# Messages Sent: " HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.381,12.346" Margin="10,300,0,0" Width="406"/>



    </Grid>
</Window>